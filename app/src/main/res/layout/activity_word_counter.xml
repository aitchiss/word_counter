<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.wordcounter.WordCounterActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="enter your text here"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="30dp"
        android:backgroundTint="@color/hintText"
        android:textColorHint="@color/hintText"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/word_count_button"
        android:text="word count"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onWordCountButtonClick"
        android:backgroundTint="@color/buttonColour"
        android:textColor="@color/buttonTextColour"/>

</LinearLayout>
